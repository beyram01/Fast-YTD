{
  "name": "Fast YTD",
  "description": "Fast and Easy Youtube videos downloader",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["modal.css"],
      "js": ["contentScript.js"]
    }
  ]
}
